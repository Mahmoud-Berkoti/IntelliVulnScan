# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/intellivulnscan
DATABASE_TEST_URL=postgresql://user:password@localhost:5432/intellivulnscan_test

# Application Settings
APP_ENV=development  # development, testing, production
DEBUG=True
SECRET_KEY=your-secret-key-here
API_KEY=your-api-key-here
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Scanner Configuration
TRIVY_PATH=/usr/local/bin/trivy
OPENVAS_HOST=localhost
OPENVAS_PORT=9390
OPENVAS_USERNAME=admin
OPENVAS_PASSWORD=admin
DEPENDENCY_CHECK_PATH=/usr/local/bin/dependency-check

# ML Model Settings
MODEL_PATH=models/priority_model.joblib
FEATURE_IMPORTANCE_THRESHOLD=0.05
PREDICTION_CONFIDENCE_THRESHOLD=0.75

# Integration Settings
JIRA_URL=https://your-jira-instance.atlassian.net
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=VULN
JIRA_ISSUE_TYPE=Bug

SLACK_API_TOKEN=your-slack-api-token
SLACK_CHANNEL=#security-alerts

# CI/CD Integration
GITHUB_TOKEN=your-github-token
GITLAB_TOKEN=your-gitlab-token
JENKINS_URL=http://your-jenkins-instance:8080
JENKINS_API_TOKEN=your-jenkins-api-token

# Redis Cache (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0 